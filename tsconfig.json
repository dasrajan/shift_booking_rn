{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    // Path alias config
    "baseUrl": "./src",
    "paths": {
      // Aliases for quick access and short import
      "@Components/*": ["components/*"],
      "@Components": ["components"],
      "@Hooks": ["hooks"],
      "@Screens": ["screens"],
      "@Screens/*": ["screens/*"]
    }
  }
}
